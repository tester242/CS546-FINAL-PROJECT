{{#if errorExists}}
    <p id="error">{{error}}</p>
{{/if}}

<article>
    <p>These are all of the active commission requests accepted by Maggie.</p><br><br>
    {{#each commissions}}
        <div class="commission">
            <dl> 
                <dt>Commission ID</dt> 
                <dd>{{this.commissionId}}</dd><br>
                <dt>Status</dt> 
                <dd>{{this.status}}</dd><br>
                <dt>Price</dt> 
                <dd>{{this.price}}</dd><br><br>
            </dl>

            {{!-- FORM DOES NOT WORK --}}
            <div id="progress">
                <div id="progress-bar"></div>
                <ul id="progress-num">
                    <li class="step active">Approved</li>
                    <li class="step">Work In Progress</li>
                    <li class="step">Prepar</li>
                    <li class="step"></li>
                </ul>
            </div>
        </div>
    {{/each}}
</article>


<footer>
    <a href="/commissions">Back to Top</a><br>
    <a href="/artworks">Back to All Artworks</a>
</footer>