{{#if errorExists}}
    <p id="error">{{error}}</p>
{{/if}}

<article>
    <h1>{{name}}</h1>
    <img alt={{name}} src={{artImage}}> 
    {{#if hasVideo}}
        <iframe width="420" height="315" src={{artVideo}}></iframe>
    {{/if}}
    <dl> 
        <dt>Date Posted</dt> 
        <dd>{{postedDate}}</dd><br>
        <dt>Description</dt> 
        <dd>{{description}}</dd><br>
        <dt>Price</dt> 
        <dd>{{price}}</dd><br>

        {{!-- FORM DOES NOT WORK --}}
        <form method="POST" id="buy-form" action="/cart">
            <button type="button">Buy</button><br>
        </form>

        <dt>Favorites</dt> 
        <dd>{{favorites}}</dd><br>
        <dt>Rating</dt> 
        <dd>{{overallRating}}</dd><br>
        <dt>Tags</dt>
        <dd> 
            {{#if tags}}
            <ul> 
                {{#each tags}}
                    <li>{{this}}</li>
                {{/each}}
            </ul> 
            {{else}}
                No Reviews
            {{/if}}   
        </dd> 
        <dt>Reviews</dt> 
        <dd> 
            {{#if reviews}}
            <ul> 
                {{#each reviews}}
                    <li>{{this.name}}</li> 
                    <li>{{this.rating}}</li> 
                    <li>{{this.review}}</li> 
                {{/each}}
            </ul> 
            {{else}}
                No Reviews
            {{/if}}   
        </dd> 
    </dl>
</article>

<footer>
    <a href="/artworks">Back to All Artworks</a>
    {{#if loggedIn}}
        <a href="/logout">Logout</a>
    {{/if}}
</footer>